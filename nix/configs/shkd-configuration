# Disable skhd when Parsec is in focus
.blacklist [
    "parsecd"
    "Parsec"
]

# alt + shift - f : yabai -m window --toggle float

# reload config
cmd + shift - r : skhd --restart-service

# rotate layout (horizontal/vertical)
alt + shift - r : aerospace layout toggle horizontal vertical

# open terminal, blazingly fast compared to iTerm/Hyper
alt - return : open -na kitty

# alt + shift - return : open -na "Google Chrome" --args --disable-web-security --user-data-dir="/tmp/chrome_dev"
# cmd - return : /Applications/Alacritty.app/Contents/MacOS/alacritty

