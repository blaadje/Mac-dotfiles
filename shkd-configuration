# reload config
ctrl + shift - r : khd -e "reload"

# open terminal, blazingly fast compared to iTerm/Hyper
ctrl - return : open -na /etc/profiles/per-user/$USER/bin/alacritty

# focus space
#ctrl - 1  : yabai -m space --focus 1
#ctrl - 2  : yabai -m space --focus 2
#ctrl - 3  : yabai -m space --focus 3
#ctrl - 4  : yabai -m space --focus 4
#ctrl - 5  : yabai -m space --focus 5

#rotate tree
ctrl - r : yabai -m space --rotate 90

# move window to space
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5

# change window size
ctrl + cmd - left : yabai -m window --warp west
ctrl + cmd - down : yabai -m window --warp south
ctrl + cmd - up : yabai -m window --warp north
ctrl + cmd - right : yabai -m window --warp east

# focus window
ctrl - left : yabai -m window --focus west
ctrl - down : yabai -m window --focus south
ctrl - up : yabai -m window --focus north
ctrl - right : yabai -m window --focus east

# swap window
#shift + alt - h : window --swap west
#shift + alt - j : window --swap south
#shift + alt - k : window --swap north
#shift + alt - l : window --swap east

# toggle window fullscreen
ctrl - f : yabai -m window --toggle zoom-parent
